@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 mb-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverTypes" asp-action="New" class="btn btn-dark rounded-pill"><i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type</a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Cover Type
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(CoverType coverType in Model)
            {
                <tr>
                    <td width="50%">
                        @coverType.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverTypes" asp-action="Edit" asp-route-coverTypeId="@coverType.Id" class="btn btn-light mx-2 border rounded-pill"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="CoverTypes" asp-action="Delete" asp-route-coverTypeId="@coverType.Id" class="btn btn-danger mx-2 border rounded-pill"><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>