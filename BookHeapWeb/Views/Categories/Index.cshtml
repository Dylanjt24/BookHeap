@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 mb-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="New" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create New Category</a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(Category category in Model)
            {
                <tr>
                    <td width="50%">
                        @category.Name
                    </td>
                    <td width="30%">
                        @category.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Categories" asp-action="Edit" asp-route-categoryId="@category.CategoryId" class="btn btn-secondary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <form asp-controller="Categories" asp-action="Delete" asp-route-categoryId="@category.CategoryId" method="POST">
                                <button class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>